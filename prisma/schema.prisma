datasource db {
  provider = "postgresql"
}

generator client {
  provider   = "prisma-client-js"
  output     = "../generated/prisma"
  engineType = "client"
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model Order {
  id          String      @id @default(uuid())
  totalAmount Float
  totalItems  Int
  status      OrderStatus
  paid        Boolean     @default(false)
  paidAt      DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
